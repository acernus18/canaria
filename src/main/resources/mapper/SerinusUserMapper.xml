<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.maples.serinus.repository.SerinusUserMapper">
    <resultMap id="BaseResultMap" type="org.maples.serinus.model.SerinusUser">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="principal" jdbcType="VARCHAR" property="principal"/>
        <result column="credential" jdbcType="VARCHAR" property="credential"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="email" jdbcType="VARCHAR" property="email"/>
    </resultMap>

    <select id="selectOneByPrincipal" resultMap="BaseResultMap">
        select `id`, `principal`, `credential`, `status`
        from `tb_serinus_user`
        <where>
            `principal` = '${principal}'
        </where>
    </select>
</mapper>